<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">


    <!--加载配置文件-->
    <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:config/jdbc.properties</value>
                <value>classpath:config/rpc_dubbo_provider.properties</value>
            </list>
        </property>
    </bean>

    <dubbo:application name="${dubbox.application}" owner="programmer" organization="dubbox"/>

    <!-- zookeeper注册中心 -->
    <dubbo:registry address="${dubbox.registry.address}"/>

    <dubbo:annotation package="com.herman.di" />

    <!-- 和本地bean一样实现服务 -->
    <bean id="userInfoService" class="com.herman.di.service.impl.UserInfoServiceImpl" />

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.herman.di.service.UserInfoService" ref="userInfoService" />

    <import resource="classpath:config/applicationContext.xml"/>

</beans>